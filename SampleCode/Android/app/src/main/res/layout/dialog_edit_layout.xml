<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_size_20"
        android:layout_marginRight="@dimen/dp_size_20"
        android:background="@drawable/white_round_box_13dp_shape"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_15"
            android:ellipsize="end"
            android:gravity="left"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/dp_size_29"
            android:paddingRight="@dimen/dp_size_29"
            android:singleLine="true"
            android:text="dd"
            android:textColor="@color/color_337EFF"
            android:textSize="@dimen/sp_size_17"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_16"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/dp_size_29"
            android:paddingRight="@dimen/dp_size_29"
            android:textColor="@color/color_337EFF"
            android:textSize="@dimen/sp_size_14"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/edit_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_size_34"
            android:layout_marginLeft="@dimen/dp_size_29"
            android:layout_marginRight="@dimen/dp_size_29"
            android:layout_marginTop="@dimen/dp_size_21"
            android:background="@drawable/edit_dialog_text_bg"
            android:paddingLeft="@dimen/dp_size_14"
            android:paddingRight="@dimen/dp_size_14"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_50_337EFF"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/sp_size_14"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="@dimen/dp_size_80"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_50_337EFF"
                android:textSize="@dimen/sp_size_14"/>


            <TextView
                android:id="@+id/ok"
                android:layout_width="@dimen/dp_size_80"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/color_50_337EFF"
                android:textSize="@dimen/sp_size_14"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>